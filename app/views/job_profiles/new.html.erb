<div class="container">

  <h2 class="page_title mb-5 border-bottom">Nouveau modèle de fiche de paie</h2>

  <%= simple_form_for(@job_profile) do |f| %>
    <div class="d-flex justify-content-evenly">
      <div>
        <%= f.input :name, label: "Nom du modèle ?" %>
      </div>
      <div>
        <%= f.input :artist, label: "Artiste ?", as: :boolean %>
      </div>
      <div>
        <%= f.input :executive, label: "Cadre ?", as: :boolean %>
      </div>
    </div>

    <div class="w-100">
      <% @contributions.each do |contribution| %>
        <label>
          <%= check_box_tag "job_profile[contributions_ids][]", contribution.id %>
          <%= contribution.name %>
        </label>
        <br />
      <% end %>
    </div>
    <%= f.submit%>
  <% end %>
</div>
